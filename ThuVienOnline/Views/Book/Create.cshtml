@model ThuVienOnline.Models.Book

@{
    ViewData["Title"] = "Create";
}

<style>
    #TheLoai {
        border: 1px solid #d2d6da;
        border-radius: 14px;
        margin-top: 30px;
        background-color: #fff;
        padding: 6px;
    }

    .img-book {
        width: 300px;
        height: 400px;
    }
</style>
<h1>Thêm Mới</h1>

<h4>Sách</h4>
<hr />

<form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Book">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="BookName" class="control-label">Tên Sách</label>
                    <input asp-for="BookName" class="form-control" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>
                <div class=" col-md-6 form-group">
                    <label asp-for="TacGia" class="control-label">Tác Giả</label>
                    <input asp-for="TacGia" class="form-control" />
                    <span asp-validation-for="TacGia" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Mota" class="control-label">Mô Tả</label>
                <textarea asp-for="Mota" class="form-control"></textarea>
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="NgayPh" class="control-label">Ngày Phát Hành</label>
                    <input asp-for="NgayPh" class="form-control" />
                    <span asp-validation-for="NgayPh" class="text-danger"></span>
                </div>
                <div class=" col-md-6 form-group">
                    <label asp-for="SoTrang" class="control-label">Số Trang</label>
                    <input asp-for="SoTrang" class="form-control" />
                    <span asp-validation-for="SoTrang" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    @*@Html.DropDownListFor(m => m.TheLoai,
                    new SelectList(Enum.GetValues(typeof(TheLoai))),
                    "Chọn Thể Loại:")*@
                    <label asp-for="TheLoaiID" class="control-label">Thể loại</label>
                    <select asp-for="TheLoaiID" class="form-control" asp-items="ViewBag.TheLoaiID"></select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                    <label asp-for="SoTrang" class="control-label">Nhập Link Ảnh</label>
                    <input asp-for="Anh" value="Anh" id="input_img_book" class="form-control" />
                    <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div>
                <img id="anhBook" class="img-book" src="~/img/book.png" />
                <a class="btn btn-primary" onclick="loadImage()">Load Ảnh</a>
            </div>
            <div>
                
            </div>
        </div>
    </div>
</form>
