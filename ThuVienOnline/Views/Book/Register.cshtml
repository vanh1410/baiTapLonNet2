@model ThuVienOnline.Models.NguoiDung
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/lib/bootstrap-5.1.3-dist/css/bootstrap.css">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <style>
        #GioiTinh {
            border: 1px solid #d2d6da;
            border-radius: 14px;
            margin-top: 30px;
            background-color: #fff;
            padding: 6px;
        }
    </style>
</head>
<body>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container-register">
            <div class="register">
                <h1 class="register-heading">Đăng Ký Tài Khoản</h1>
                <div class="container-btn-social">
                </div>
                <hr />

                <div class="container row">
                    <div class="col-md-12">
                        <div class="form-group">
                    <label asp-for="FullName" class="register-labelname">Họ Tên</label>
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Full name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Ngaysinh" class="register-label">Ngày Sinh</label>
                            <input asp-for="Ngaysinh" type="date" class="form-control" placeholder="dd/mm/yyyy" />
                            <span asp-validation-for="Ngaysinh" class="text-danger"></span>
                        </div>

                    <div class="row register-container">
                        <div class="col-sm-6">
                            <label asp-for="Phone" class="register-label">Điện thoại</label>
                                <input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Email" class="register-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="ex@email.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row register-container">
                        <div class="col-sm-6">
                            <label asp-for="Password" class="register-label">Mật khẩu</label>
                                <input asp-for="Password" type="password" id="password" class="form-control register-input" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label for="password" class="register-label">Nhập lại mật khẩu</label>
                                <input type="password" id="confirm_password" class="form-control register-input" placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                    <button type="submit" value="Register" class="register-btn btn btn-primary">Đăng ký</button>
                    <p class="login-question">
                        <a asp-action="Login" asp-controller="Book" class="login-text">Quay lại đăng nhập</a>
                    </p>
                </div>
                </div>
            </div>
        </div>
        <script language="javascript">
            var password = document.getElementById("password")
                , confirm_password = document.getElementById("confirm_password");

            function validatePassword() {
                if (password.value != confirm_password.value) {
                    confirm_password.setCustomValidity("Mật khẩu không trùng khớp !");
                } else {
                    confirm_password.setCustomValidity('');
                }
            }

            password.onchange = validatePassword;
            confirm_password.onkeyup = validatePassword;
        </script>
    </form>
</body>
</html>
